# Environment Configuration for Capstone Security Suite
# Copy this file to .env and modify as needed

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=change-this-secret-key-in-production
HOST=127.0.0.1
PORT=5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/security_suite.log

# Security Settings
SESSION_TIMEOUT=7200
MAX_SCAN_TARGETS=1000
SCANNER_MAX_THREADS=100
DEFAULT_SCAN_TIMEOUT=5

# IDS Configuration
IDS_DETECTION_THRESHOLD=0.7
IDS_ALERT_THRESHOLD=0.8
IDS_BUFFER_SIZE=1000
IDS_TRAINING_SIZE=500
IDS_MONITORING_INTERVAL=1.0
IDS_MAX_ALERTS_PER_MINUTE=10

# Rate Limiting (optional - requires Redis for production)
REDIS_URL=redis://localhost:6379

# Database (optional - for future features)
DATABASE_URL=sqlite:///security_suite.db

# Email Configuration (optional - for alert notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# External API Keys (optional)
VIRUSTOTAL_API_KEY=your-virustotal-api-key
WHOIS_API_KEY=your-whois-api-key

# Network Configuration
DEFAULT_USER_AGENT=Capstone-Security-Suite/1.0
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30

# Security Headers
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' cdn.jsdelivr.net cdnjs.cloudflare.com code.jquery.com; style-src 'self' 'unsafe-inline' cdn.jsdelivr.net cdnjs.cloudflare.com; img-src 'self' data:; font-src 'self' cdnjs.cloudflare.com

# Development Settings (disable in production)
DEBUG_TOOLBAR_ENABLED=True
TESTING_MODE=False